{
  "name": "coc-apollo",
  "version": "0.4.1",
  "description": "coc.nvim extension for Apollo GraphQL",
  "author": "ruanyl <ruanyu1@gmail.com>",
  "license": "MIT",
  "main": "lib/index.js",
  "keywords": [
    "coc.nvim"
  ],
  "engines": {
    "coc": "^0.0.80"
  },
  "scripts": {
    "lint": "eslint src --ext ts",
    "clean": "rimraf lib",
    "watch": "node esbuild.js --watch",
    "build": "node esbuild.js",
    "prepare": "npm-run-all clean build",
    "prepublish": "npm-run-all clean build",
    "release": "standard-version --releaseCommitMessageFormat 'chore(release): {{currentTag}} [skip ci]'"
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 120,
    "semi": true
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.8.2",
    "@typescript-eslint/parser": "^4.8.2",
    "coc.nvim": "^0.0.80",
    "esbuild": "^0.8.42",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.0",
    "rimraf": "^3.0.2",
    "standard-version": "^9.1.1",
    "typescript": "^4.1.2"
  },
  "activationEvents": [
    "*"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "coc-apollo configuration",
      "properties": {
        "apollo.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable coc-apollo extension"
        },
        "apollo.debug": {
          "type": "boolean",
          "default": true,
          "description": "Debug graphql language server"
        },
        "apollo.defaultVariant": {
          "type": "string",
          "default": "current",
          "description": "The default apollo graph variant to download when the plugin been initially loaded"
        }
      }
    },
    "commands": [
      {
        "command": "apollo.reload.variants",
        "title": "Reload Apollo graphql schema variant list"
      },
      {
        "command": "apollo.reload.stats",
        "title": "Reload Apollo field stats"
      }
    ]
  },
  "dependencies": {
    "@endemolshinegroup/cosmiconfig-typescript-loader": "^3.0.2",
    "@types/lodash.merge": "^4.6.6",
    "cosmiconfig": "^7.0.0",
    "dotenv": "^8.2.0",
    "graphql": "^15.5.0",
    "graphql-language-service-server": "^2.6.2",
    "graphql-tag": "^2.11.0",
    "lodash.merge": "^4.6.2",
    "moment": "^2.29.1"
  }
}
